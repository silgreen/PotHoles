<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PotHoles" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FF7043</item>
        <item name="colorPrimaryVariant">#E64A19</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#80DEEA</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:buttonStyle">@style/buttonFont</item>
        <item name="android:textViewStyle">@style/textFont</item>
        <item name="tabTextAppearance">@style/tabTextFont</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="textFont" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/nunito</item>
    </style>
    <style name="buttonFont" parent="android:Widget.Button">
        <item name="android:fontFamily">@font/nunito</item>
    </style>
    <style name="tabTextFont" parent="android:Widget.ActionBar.TabText">
        <item name="android:fontFamily">@font/nunito</item>
    </style>
</resources>